@model CreateProductVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Category</h4>

                <form method="post" action="Create" class="forms-sample" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price">Price</label>
                        <input asp-for="Price" class="form-control" placeholder="Price">
                        <span class="text-danger" asp-validation-for="Price"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="Count">Count</label>
                        <input asp-for="Count" class="form-control" placeholder="Count">
                        <span class="text-danger" asp-validation-for="Count"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="Photos">Photos</label>
                        <input asp-for="Photos" class="form-control" multiple placeholder="Photos">
                        <span class="text-danger" asp-validation-for="Photos"></span>

                    </div>
                    <div class="form-group">
                        <select asp-for="" class="form-select" asp-items="@ViewBag.Categories" aria-label="Default select example">
                            <option selected>Open this select menu</option>
                          
                        </select>
                    </div>


                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a asp-controller="category" asp-action="index" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>


<partial name="_ValidationPartial"></partial>


