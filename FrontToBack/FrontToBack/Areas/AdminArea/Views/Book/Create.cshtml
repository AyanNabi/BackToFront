@model CreateBookVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}



<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Book</h4>

                <form method="post" action="Create" class="forms-sample" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                   
                  
                    <div class="form-group">
                        <select asp-for="GenreIds"  class="form-select" asp-items="ViewBag.Genres" aria-label="Default select example">
                            <option selected>Open this select menu</option>

                        </select>
                    </div>


                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a asp-controller="category" asp-action="index" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>


<partial name="_ValidationPartial"></partial>



