@model CategoryUpdateVM
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Category</h4>
              
                <form method="post" action="test"  class="forms-sample">
                    <div class="form-group">
                        <label asp-for="Name" >Name</label>
                        <input asp-for="Name" class="form-control"  placeholder="Name">
                        <span class="text-danger" asp-validation-for="Name"></span>  
                    </div>
                    <div class="form-group">
                        <label asp-for="Desc">Desc</label>
                        <input asp-for="Desc" class="form-control"placeholder="Desc">
                        <span class="text-danger" asp-validation-for="Desc"></span>

                    </div>
                   
                   
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a asp-controlle="category" asp-action="index" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
    </div>


                        @section Scripts{
    <partial name="_ValidationPartial"></partial>
                        }

                    