@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Category Table</h4>
                <div id="mysearch" class="d-flex">

                    <form action="">
                        <label for="fname">First name:</label><br>
                        <input type="text" id="fname" name="fname" value="John"><br>
                       <button type="submit">Search</button>
                    </form>




                </div>

                <a class="btn btn-success" asp-controller="category" asp-action="create">Add Category</a>



                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Username</th>
                                <th>Fullname</th>
                                <th>Settings</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.UserName</td>
                                    <td>@item.FullName</td>
                                    <td>
                                        <a class="btn btn-danger" asp-controller="User" asp-action="Delete" asp-route-id="@item.Id">
                                            <i class="mdi mdi-delete"></i>
                                        </a>
                                        <a class="btn btn-primary" asp-controller="User" asp-action="Update" asp-route-id="@item.Id">
                                            <i class="mdi mdi-table-edit"></i>
                                        </a>
                                        <a class="btn btn-success" asp-controller="User" asp-action="Detail" asp-route-id="@item.Id">
                                            <i class="mdi mdi-account-card-details"></i>
                                        </a>
                                        <a class="btn btn-success" asp-controller="User" asp-action="Detail" asp-route-id="@item.Id">
                                           Active
                                        </a>



                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>



