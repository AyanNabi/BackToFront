                                </div>
                            }
                            else
                            {
                                <div class="form-group">
                                    <label>@role.Name</label>
                                    <input name="newRoles" value="@role.Name" type="checkbox" class="form-control">
                                </div>
                            }

                        }*@

                    }




                    <button  type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a asp-controller="role" asp-action="index" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>


